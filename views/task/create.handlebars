<form id="main-form" action="/task/addComment/{{taskID}}" method="post">

  <div></div><label for="text1">Comment</label>
  <div class="mb-3 comment-div">
    <textarea class="form-control required" aria-label="comment" id="text1" name="comment"></textarea>
  </div>

  <div class="text-center">
    <label for="btnSubmit">Create</label>
    <button id="btnSubmit" type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Create Comment</button>

  </div>
</form>


{{#section "script"}}

<script>
  jQuery(document).ready(function () {
    jQuery("#main-form").validate({
      ignore: [],
      rules: {

        comment: {
          required: true,
          minlength: 5,
        },

      },
      errorPlacement: function (error, element) {
        error.insertAfter("." + element.attr("name") + "-div");
      },
      submitHandler: function (form) {
        form.submit();
      },
    });
    jQuery.validator.addMethod(
      "inputName",
      function (value, element) {
        return /\d*[a-zA-Z][a-zA-Z0-9 ]*$/i.test(
          value
        );
      },
      "Invalid Name"
    );
  });

  jQuery.validator.addMethod(
    "minAge",
    function (value, element) {
      return /^[0-9]+$/i.test(
        value
      );
    },
    "Invalid Minimum Age"
  );

  jQuery.validator.addMethod(
    "memberLimit",
    function (value, element) {
      return /^[0-9]+$/i.test(
        value
      );
    },
    "Invalid Member Limit"
  );

</script>

{{/section}}