  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container-fluid">
        <div class="image-logo">
          <a href="/"><img
              src="../../public/landingPage/images/logo.jpeg"
              id="navbar-img"
              width="40"
              height="40"
              class="fluid-image"
              alt="logo"
            />Team Up!</a>
        </div>
      </div>
    </nav>
    <script src="../public/form.js"></script>
    <div class="jumbrotron jumbrotron-fluid">
    <div class="container-fluid">
        <h1 class="display-3">Welcome to Team Up!</h1>
        <hr class="my-4" />
        <p class="lead">A Platform that promotes Open Source Collaborations!</p>
    </div>
    </div>
    <div class="row d-flex justify-content-center">
    <div id="card_balzers" class="card" style="width: 20rem; ">
        <img src="../public/landingPage/images/blazers.jpeg" class="card-img-top" alt="..." />
        <div class="card-body">
        <h5 class="card-title">Blazers</h5>
        <p class="card-text">Tech Stack - JavaFX</p>
        </div>
    </div>
    <div id="card_nightcrawlers" class="card" style="width: 20rem;">
        <img src="../public/landingPage/images/Nightcrawlers.jpg" class="card-img-top" alt="..." />
        <div class="card-body">
        <h5 class="card-title">Night Crawlers</h5>
        <p class="card-text">Tech Stack - JavaScript</p>
        </div>
    </div>
    <div id="card_bangers" class="card" style="width: 20rem;">
        <img src="../public/landingPage/images/bangers.jpeg" class="card-img-top" alt="..." />
        <div class="card-body">
        <h5 class="card-title">Bangers</h5>
        <p class="card-text">iOS Projects Only</p>
        </div>
    </div>
    </div>
    <button id="login-btn" class="btn btn-light btn-lg"><a
        href="/login"
    >Login</a></button>
    <button id="signup-btn" class="btn btn-light btn-lg"><a href="/register">Sign Up</a></button>
    {{#if error}}
    <p class={{class}}>{{error}}</p>
    {{/if}}
    <nav
      class="navbar fixed-bottom navbar-light"
      style="background-color: #e3f2fd;"
    >
